<% include ../partials/header %>

<div class="container ptb-125">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <h3 class="login-heading mb-4 text-center">Create studentcourse</h3>
            <form action="/studentscourses" method="post">
                <% if (errors.length > 0) { %>
                    <% for(var i = 0; i < errors.length; i++) { %>
                        <div class="alert alert-danger mb-15" role="alert">
                            <%= errors[i].msg %>
                        </div>
                    <% } %>
                <% } %>
                <div class="form-label-group">
                    <input type="text" id="inputUsername" class="form-control" placeholder="Grade" name="grade" <% if (inputs.length > 0) { %>value="<%=inputs[0].grade%>"<% } %>required autofocus>
                    <label for="inputUsername">Grade</label>
                </div>
                <div class="form-label-group">
                    <input type="text" id="inputUsername" class="form-control" placeholder="Student Id" name="student_id" <% if (inputs.length > 0) { %>value="<%=inputs[0].student_id%>"<% } %>>
                    <label for="inputUsername">Student Id</label>
                </div>
                <div class="form-label-group">
                    <input type="text" id="inputUsername" class="form-control" placeholder="Course Id" name="course_id" <% if (inputs.length > 0) { %>value="<%=inputs[0].course_id%>"<% } %>>
                    <label for="inputUsername">Course Id</label>
                </div>




                <button class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>
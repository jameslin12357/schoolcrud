<% include ../partials/header %>

<div class="container ptb-125">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <h3 class="login-heading mb-4 text-center">Edit department</h3>
            <form action="/departments/<%= results[0].id %>?_method=PUT" method="post">
                <% if (errors.length > 0) { %>
                <% for(var i = 0; i < errors.length; i++) { %>
                <div class="alert alert-danger mb-15" role="alert">
                    <%= errors[i].msg %>
                </div>
                <% } %>
                <% } %>


                    <div class="form-label-group">
                                        <input type="text" id="inputUsername" class="form-control" placeholder="Name" name="name" value="<%if (inputs.length > 0) { %><%= inputs[0].name %><% }else{ %><%= results[0].name %><% } %>"required autofocus>
                                        <label for="inputUsername">Name</label>
                                    </div>
                                    <div class="form-label-group">
                                        <input type="text" id="inputUsername" class="form-control" placeholder="Description" name="description" value="<%if (inputs.length > 0) { %><%= inputs[0].description %><% }else{ %><%= results[0].description %><% } %>"required autofocus>
                                        <label for="inputUsername">Description</label>
                                    </div>
                                    <div class="form-label-group">
                                        <input type="text" id="inputUsername" class="form-control" placeholder="Teacher Id" name="teacher_id" value="<%if (inputs.length > 0) { %><%= inputs[0].teacher_id %><% }else{ %><%= results[0].teacher_id %><% } %>"required autofocus>
                                        <label for="inputUsername">Teacher Id</label>
                                    </div>


                    <button class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>
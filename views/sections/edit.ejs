<% include ../partials/header %>

<div class="container ptb-125">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <h3 class="login-heading mb-4 text-center">Edit section</h3>
            <form action="/sections/<%= results[0].id %>?_method=PUT" method="post">
                <% if (errors.length > 0) { %>
                <% for(var i = 0; i < errors.length; i++) { %>
                <div class="alert alert-danger mb-15" role="alert">
                    <%= errors[i].msg %>
                </div>
                <% } %>
                <% } %>

                    <div class="form-label-group">
                        <input type="text" id="inputUsername" class="form-control" placeholder="Name" name="name" value="<%if (inputs.length > 0) { %><%= inputs[0].name %><% }else{ %><%= results[0].name %><% } %>"required autofocus>
                        <label for="inputUsername">Name</label>
                    </div>
                    <div class="form-label-group">
                        <input type="text" id="inputUsername" class="form-control" placeholder="Start" name="start" value="<%if (inputs.length > 0) { %><%= inputs[0].start %><% }else{ %><%= results[0].start %><% } %>"required>
                        <label for="inputUsername">Start</label>
                    </div>
                    <div class="form-label-group">
                        <input type="text" id="inputUsername" class="form-control" placeholder="End" name="end" value="<%if (inputs.length > 0) { %><%= inputs[0].end %><% }else{ %><%= results[0].end %><% } %>"required>
                        <label for="inputUsername">End</label>
                    </div>


                    <button class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>